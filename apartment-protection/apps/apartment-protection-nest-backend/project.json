{
  "name": "apartment-protection-nest-backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/apartment-protection-nest-backend/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/apartment-protection-nest-backend",
        "main": "apps/apartment-protection-nest-backend/src/main.ts",
        "tsConfig": "apps/apartment-protection-nest-backend/tsconfig.app.json",
        "assets": ["apps/apartment-protection-nest-backend/src/assets"],
        "isolatedConfig": true,
        "webpackConfig": "apps/apartment-protection-nest-backend/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "apartment-protection-nest-backend:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "apartment-protection-nest-backend:build:development"
        },
        "production": {
          "buildTarget": "apartment-protection-nest-backend:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/apartment-protection-nest-backend/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/apartment-protection-nest-backend/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/apartment-protection-nest-backend/Dockerfile . -t apartment-protection-nest-backend"
    },
    "docker-db-restart": {
      "executor": "nx:run-script",
      "options": {
        "script": "docker compose rm eco-db -s -f -v && docker compose up eco-db -d"
      }
    }
  },
  "tags": []
}
